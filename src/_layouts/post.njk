<article class="region blog">
  <div class="wrapper prose">
    <h1 class="title-shadow-post">{{ title }}</h1>

    <div class="post-list my-s-m">
      {% set definedDate = date %}{% include "partials/date-time.njk" %}
      <ul class="tag-list">
        {% for tag in tags %}
          {% if tag != "posts" %}
            <li class="tag">#{{ tag }}</li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  <div class="wrapper flow">
    {{ content | safe }}

  </div>
  </div>
</article>

<div hidden>
    <!--  h-card infos -->
    <a class="u-url" href="{{ page.url | url | absoluteUrl(meta.url) }}">{{ title }}</a>
    <p class="h-card p-author">
      <a class="p-name u-url" rel="author" href="{{ meta.url }}">{{ meta.author }}</a>
      <img
        src="{{ meta.authorAvatar | url | absoluteUrl(meta.url) }}"
        alt="{{ meta[page.lang].siteName }}"
      />
    </p>
  </div>
</article>

